  <!-- Content
  ================================================== -->
  <div class="site-content">
    <div class="container">

      <div class="row">
        <div class="col-lg-12">

          <!-- Personal Information -->
          <div class="card card--lg">
            <div class="card__header">
              <h4>Team Player Information</h4>
            </div>
            <div class="card__content">
              <%= form_with model: @team_player, class: "df-personal-info" do |form| %>
                <div class="row">
                <% if team_player.errors.any? %>
                  <div id="error_explanation">
                    <h2><%= pluralize(team_player.errors.count, "error") %> prohibited this Team player from being saved:</h2>

                    <ul>
                      <% team_player.errors.each do |error| %>
                        <li><%= error.full_message %></li>
                      <% end %>
                    </ul>
                  </div>
                <% end %>
                
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= form.label :player_id %>
                      <%= form.select(:player_id, Player.all.pluck(:first_name, :id), {include_blank: "Select Player"}, { :class => 'form-control' }) %>
                    </div>
                  </div>

                  <div class="col-md-6">
                    <div class="form-group">
                      <%= form.label :number %>
                      <%= form.text_field :number, class: "form-control", placeholder: "Enter Player Number" %>
                    </div>
                  </div>

                  <div class="col-md-6">
                    <div class="form-group">
                      <%= form.hidden_field :team_id, value: @team.id, class: "form-control", placeholder: "Enter Email" %>
                    </div>
                  </div>
                </div>

                <div class="form-group--submit">
                  <button type="submit" class="btn btn-default btn-lg btn-block" style="width: 100%;">Save Changes</button>
                </div>

              <% end %>
            </div>
          </div>
          <!-- Personal Information / End -->
        </div>
      </div>
    </div>
  </div>