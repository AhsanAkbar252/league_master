  <!-- Content
  ================================================== -->
  <div class="site-content">
    <div class="container">

      <div class="row">
        <div class="col-lg-12">

          <!-- Personal Information -->
          <div class="card card--lg">
            <div class="card__header">
              <h4>Referee Position Information</h4>
            </div>
            <div class="card__content">
              <%= form_with model: @referee_position, class: "df-personal-info" do |form| %>
                <div class="row">
                <div class="col-md-12">
                  <% if referee_position.errors.any? %>
                    <div id="error_explanation">
                      <h2><%= pluralize(referee_position.errors.count, "error") %> prohibited this referee_position from being saved:</h2>

                      <ul>
                        <% referee_position.errors.each do |error| %>
                          <li><%= error.full_message %></li>
                        <% end %>
                      </ul>
                    </div>
                  <% end %>
                </div>
                
                  <div class="col-md-12">
                    <div class="form-group">
                      <%= form.label :name %>
                      <%= form.text_field :name, class: "form-control", placeholder: "Enter Referee Position" %>
                    </div>
                  </div>


                </div>

                <div class="form-group--submit">
                  <button type="submit" class="btn btn-default btn-lg btn-block" style="width: 100%;">Save Changes</button>
                </div>

              <% end %>
            </div>
          </div>
          <!-- Personal Information / End -->
        </div>
      </div>
    </div>
  </div>
