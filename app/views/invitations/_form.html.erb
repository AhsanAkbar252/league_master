  <!-- Content
  ================================================== -->
  <div class="site-content">
    <div class="container">

      <div class="row">
        <div class="col-lg-12">

          <!-- Personal Information -->
          <div class="card card--lg">
            <div class="card__header">
              <h4>Invitation Information</h4>
            </div>
            <div class="card__content">
              <%= form_with model: @invitation, class: "df-personal-info" do |form| %>
                <div class="row">
                  <% if invitation.errors.any? %>
                    <div id="error_explanation">
                      <h2><%= pluralize(invitation.errors.count, "error") %> prohibited this invitation from being saved:</h2>

                      <ul>
                        <% invitation.errors.each do |error| %>
                          <li><%= error.full_message %></li>
                        <% end %>
                      </ul>
                    </div>
                  <% end %>
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= form.label :state %>
                      <%= form.select(:state, ["Pending", "Accepted", "Declined"] , {}, { :class => 'form-control' }) %>
                    </div>
                  </div>

                  <div class="col-md-6">
                    <div class="form-group">
                      <%= form.label :referee_id %>
                      <%= form.select(:referee_id, Referee.all.pluck(:first_name, :id), {include_blank: "Select Referee"}, { :class => 'form-control' }) %>
                    </div>
                  </div>

                  <div class="col-md-6">
                    <div class="form-group">
                      <%= form.label :game_id %>
                      <%= form.select(:game_id, Game.all.pluck(:date, :id), {include_blank: "Select Game"}, { :class => 'form-control' }) %>
                    </div>
                  </div>

                </div>

                <div class="form-group--submit">
                  <button type="submit" class="btn btn-default btn-lg btn-block" style="width: 100%;">Save Changes</button>
                </div>

              <% end %>
            </div>
          </div>
          <!-- Personal Information / End -->
        </div>
      </div>
    </div>
  </div>

  <!-- Content / End -->
