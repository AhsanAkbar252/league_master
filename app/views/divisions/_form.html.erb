
  <!-- Content
  ================================================== -->
  <div class="site-content">
    <div class="container">

      <div class="row">
        <div class="col-lg-12">

          <!-- Personal Information -->
          <div class="card card--lg">
            <div class="card__header">
              <h4>Division Information</h4>
            </div>
            <div class="card__content">
              <%= form_with model: @division, class: "df-personal-info" do |form| %>
                <div class="row">
                <div class="col-md-12">
                  <% if division.errors.any? %>
                    <div id="error_explanation">
                      <h2><%= pluralize(division.errors.count, "error") %> prohibited this division from being saved:</h2>

                      <ul>
                        <% division.errors.each do |error| %>
                          <li><%= error.full_message %></li>
                        <% end %>
                      </ul>
                    </div>
                  <% end %>
                </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= form.label :name %>
                      <%= form.text_field :name, class: "form-control", placeholder: "Enter name" %>
                    </div>
                  </div>

                  <div class="col-md-6">
                    <div class="form-group">
                      <%= form.label :division_type %>
                      <%= form.text_field :division_type, class: "form-control", placeholder: "Division Type" %>

                    </div>
                  </div>
        
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= form.label :league_id %></br>
                      <%= form.select(:league_id, League.all.pluck(:name, :id), {include_blank: "Select something"}, { :class => 'form-control' }) %>
                    </div>
                  </div>

                  <div class="col-md-6">
                    <div class="form-group form-group--upload">
                      <div class="form-group__avatar">
                        <%# <img src="../assets/images/samples/avatar-empty.png" alt=""> %>
                        <div class="form-group__label">
                           <%= form.label :photo %></br>
                          <%= form.file_field :photo, class: "btn btn-default btn-xs btn-file" %>
                          <%# <span>Minimum size 60x60px</span> %>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="form-group--submit">
                  <button type="submit" class="btn btn-default btn-lg btn-block" style="width: 100%;">Save Changes</button>
                </div>

              <% end %>
            </div>
          </div>
          <!-- Personal Information / End -->
        </div>
      </div>
    </div>
  </div>