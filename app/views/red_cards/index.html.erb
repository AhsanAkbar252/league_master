<p id="notice"><%= notice %></p>

<h1>Red Cards</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Time</th>
      <th>Player</th>
      <th>Game</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @red_cards.each do |red_card| %>
      <tr>
        <td><%= red_card.time %></td>
        <td><%= red_card.player.first_name %></td>
        <td><%= red_card.game_id %></td>
        <td><%= link_to 'Show', red_card %></td>
        <td><%= link_to 'Edit', edit_red_card_path(red_card) %></td>
        <td><%= link_to 'Destroy', red_card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Red Card', new_red_card_path %>
