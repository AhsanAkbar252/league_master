<p id="notice"><%= notice %></p>

<h1>Yellow Cards</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Time</th>
      <th>Player</th>
      <th>Game</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @yellow_cards.each do |yellow_card| %>
      <tr>
        <td><%= yellow_card.time %></td>
        <td><%= yellow_card.player.first_name %></td>
        <td><%= yellow_card.game_id %></td>
        <td><%= link_to 'Show', yellow_card %></td>
        <td><%= link_to 'Edit', edit_yellow_card_path(yellow_card) %></td>
        <td><%= link_to 'Destroy', yellow_card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Yellow Card', new_yellow_card_path %>
